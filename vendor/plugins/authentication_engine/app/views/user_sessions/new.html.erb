<% title "Entrar a la zona privada del Partido de Internet" %>

<fieldset>
  <legend><%= "Identificarse mediante #{login_toggle}" %></legend>

<%= error_messages_for :user_session, :object_name => UserSession.human_name %>

<% form_for @user_session, :url => user_session_path do |f| %>
<div id="password_box"<% unless @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <p>
    <%= f.label :login, "Usuario" %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "Recordarme", :class => 'inline' %>    
  </p>
  <p>
    <%= f.submit "Entrar" %> |
    <%= link_to "Olvidé mi contraseña", new_password_reset_path %>
  </p>
</div>

<div id="openid_box"<% if @user_session.openid_identifier.blank? %> style="display: none;"<% end %>>
  <p>
    <%= f.label :openid_identifier, openid_link %>
    <%= f.text_field :openid_identifier %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, "Recordarme", :class => 'inline' %>    
  </p>
  <p>
    <%= f.submit "Entrar" %>
  </p>
</div>
<% end %>

</fieldset>