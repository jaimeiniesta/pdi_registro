<% title "Solicitar Invitación" %>

<%= error_messages_for :invitation %>

<% form_for @invitation do |f| %>
  <p>
    <%= f.label :applicant_name %><br />
    <%= f.text_field :applicant_name %>
  </p>
  <p>
    <%= f.label :applicant_email %><br />
    <%= f.text_field :applicant_email %>
  </p>
  <p>
    <%= f.submit "¡Solicitar!" %>
  </p>
<% end %>
