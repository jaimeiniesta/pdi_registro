<% title "Active su cuenta" %>

<% form_for @user, :url => activate_path(@user), :html => { :method => :post } do |f| %>
  <%= f.error_messages %>
  <%- if @invitation -%>
  <%= f.hidden_field :invitation_id %>
  <%= hidden_field_tag :invitation_token, @invitation.token %>
  <fieldset>
    <p>
      <%= f.label :name, "Nombre" %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email, "Email" %><br />
      <%= f.text_field :email %>
    </p>
  </fieldset>
  <%- end -%>
  <fieldset>
    <p>
      <%= f.label :login, "Usuario" %><br />
      <%= f.text_field :login %>
    </p>
    <p>
      <%= f.label :password, "Escriba su contrase침a" %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Confirmaci칩n contrase침a" %><br />
      <%= f.password_field :password_confirmation %>
    </p>
  </fieldset>
  <fieldset>
    <p>
      <%= f.label :openid_identifier, openid_link %><br />
      <%= f.text_field :openid_identifier %>
    </p>
  </fieldset>
  <fieldset>
    <p>
      <%= f.label :last_name, "Apellidos" %><br />
      <%= f.text_field :last_name %>
    </p> 
    <p>
      <%= f.label :age, "Edad" %><br />
      <%= f.text_field :age %>
    </p>
    <p>
      <%= f.label :gender, "Sexo" %><br />
      <%= f.select :gender, [ "Masculino", "Femenino" ] %>
    </p>
    <p>
      <%= f.label :region_id, "Regi칩n" %><br />
      <%= f.select :region_id, Region.all.sort_by(&:name).collect {|region| [region.name, region.id]} %>
    </p>
  </fieldset>

  <p>
    <%= f.submit "Activar" %>
  </p>
<% end %>