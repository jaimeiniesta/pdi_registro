<% title "Registrar Una Cuenta" %>

<% form_for @user, :url => account_path do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <p>
      <%= f.label :name, "Nombre" %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email, "Email" %><br />
      <%= f.text_field :email %>
    </p>
  </fieldset>
  <fieldset>
    <p>
      <%= f.label :openid_identifier, openid_link %><br />
      <%= f.text_field :openid_identifier %>
    </p>
  </fieldset>
  
  <p>Al pulsar el botón, usted:</p>
  <p>Acepta y autoriza los términos de las <%= link_to "Condiciones de uso", 
      :controller => "info", 
      :action     => "terms_of_service" %>.</p>
  </p>
  <p>
    <%= f.submit "Registrarse" %>
  </p>
<% end %>