-title "Cuenta de Usuario"
#show_user
  %p
    %b Nombre:
    =h @user.name 
  %p
    %b Apellidos
    %span#user_last_name=h @user.last_name
  %p
    %b Usuario:
    =h @user.login 
  %p
    %b Email:
    =h @user.email 
  %p
    %b=openid_link
    =h @user.openid_identifier
  %p
    %b Edad:
    %span#user_age=h @user.age
  %p
    %b Sexo:
    %span#user_gender=h @user.gender
  %p
    %b Region:
    %span#user_region=h @user.region.try(:name)
  %p
    =link_to "Editar", edit_account_path