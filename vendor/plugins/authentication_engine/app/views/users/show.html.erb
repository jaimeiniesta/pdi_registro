<% title "Cuenta de Usuario" %>

<p>
  <b>Nombre:</b>
  <%=h @user.name %>
</p>
<p>
  <b>Usuario:</b>
  <%=h @user.login %>
</p>
<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>
<p>
  <b><%= openid_link %>:</b>
  <%=h @user.openid_identifier %>
</p>
<p>
  <b>Roles:</b>
  <%=h @user.roles.map(&:name).join(', ') %>
</p>
<p>
  <b>Logins:</b>
  <%=h @user.login_count %>
</p>
<p>
  <b>Apellidos:</b>
  <span id="user_last_name"><%=h @user.last_name %></span>
</p>
<p>
  <b>Edad:</b>
  <span id="user_age"><%=h @user.age %></span>
</p>
<p>
  <b>Sexo:</b>
  <span id="user_gender"><%=h @user.gender %></span>
</p>
<p>
  <b>Region:</b>
  <span id="user_region"><%=h @user.region.try(:name) %></span>
</p>
<p>
  <b>Idioma:</b>
  <%=h @user.preference.language %>
</p>
<p>
  <b>Zona horaria:</b>
  <%=h @user.preference.time_zone %>
</p>

<%= link_to "Editar", edit_account_path %>