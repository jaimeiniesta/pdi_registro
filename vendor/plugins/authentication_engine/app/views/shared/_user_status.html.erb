<div id="user_status" class="grid_22">
<%- if current_user -%>
  <p>
    <%- if current_user.admin? -%>
    <%= link_to "Panel De Administración", admin_root_path %> ·
    <%- end -%>
    <%= link_to "Inicio", dashboard_path %> ·
    <%= link_to "Ranking", ranking_path %> ·
    <%= link_to "Colaborar", {:action => 'index' , :controller => 'colaborate' } %> ·
    <%= link_to "Wiki", 'http://www.partidodeinternet.es/wiki/', :target => '_blank' %> ·
    <%= link_to "Foro", 'http://www.partidodeinternet.es/foro/', :target => '_blank' %> ·
    <%= link_to "Tu Cuenta", account_path %>
    
    <%#= link_to "Cerrar Sesión", logout_path, :method => :delete, :confirm => "¿Seguro que quiere cerrar la sesión?" %>
  </p>
  <%- if REGISTRATION[:private] and current_user.invitation_limit > 0 -%>
  <p>
    <%# link_to "Enviar Invitación", new_invitation_path %>
    <%# "(#{current_user.invitation_limit} restantes)" %>
  </p>
  <%- end -%>
<%- else -%>
  <p>
    <%- if REGISTRATION[:requested] -%>
    <%# link_to "Solicitar Invitación", apply_invitations_path %>
    <%- end -%>
    <%- if REGISTRATION[:public] and not login_form -%>
    Estoy registrado, quiero <%= link_to "Entrar", login_path %>
    <%- end -%>
  </p>
<%- end -%>
</div>