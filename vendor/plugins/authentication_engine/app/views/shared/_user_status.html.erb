<div id="user_status">
<%- if current_user -%>
  <p>
    <%- if current_user.admin? -%>
    <%= link_to "Panel De Administración", admin_root_path %> |
    <%- end -%>
    <%= link_to "Mi Cuenta", account_path %> |
    <%= link_to "Dashboard", dashboard_path %> |
    <%= link_to "Cerrar Sesión", logout_path, :method => :delete, :confirm => "¿Seguro que quiere cerrar la sesión?" %>
  </p>
  <%- if REGISTRATION[:private] and current_user.invitation_limit > 0 -%>
  <p>
    <%# link_to "Enviar Invitación", new_invitation_path %>
    <%# "(#{current_user.invitation_limit} restantes)" %>
  </p>
  <%- end -%>
<%- else -%>
  <p>
    <%- if REGISTRATION[:requested] -%>
    <%# link_to "Solicitar Invitación", apply_invitations_path %> |
    <%- end -%>
    <%- if REGISTRATION[:public] -%>
    <%= link_to "Registrarse", signup_path %> |
    <%- end -%>
    <%= link_to "Identificarse", login_path %>
  </p>
<%- end -%>
</div>
