<% title "Olvidé mi contraseña" %>

<p><%= t('password_resets.reset_note') %></p>

<% form_tag password_resets_path, :class => "password_reset" do %>
  <p>
    <%= label_tag :email, "Su Direccion De Email:" %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= submit_tag "Resetear mi contraseña" %>
  </p>
<% end %>